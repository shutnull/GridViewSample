<UserControl x:Class="GridViewSample.UserCtrl.MargableDataGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GridViewSample.UserCtrl"
             mc:Ignorable="d" 
             BorderBrush="#323232"
             BorderThickness="1"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="HeaderRowSize" Height="66"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="HVScrollBar" Grid.RowSpan="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollChanged="HVScrollBar_ScrollChanged">
            <TextBlock x:Name="DmyControl" IsHitTestVisible="False"/>
        </ScrollViewer>
        <local:MargableHeader x:Name="Header" Grid.Row="0" Margin="0,0,17,0" PreviewMouseWheel="Grid_PreviewMouseWheel"/>
        <local:MargableGridBox x:Name="GridBox" Grid.Row="1" Margin="0,0,17,17" PreviewMouseWheel="Grid_PreviewMouseWheel"/>
    </Grid>
</UserControl>
